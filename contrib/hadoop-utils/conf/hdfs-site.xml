<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>
  <property>
    <name>dfs.replication</name>
    <value>1</value>
  </property>
  <property>
    <name>dfs.support.append</name>
    <value>true</value>
  </property>
  <property>
    <name>dfs.client.read.shortcircuit</name>
    <value>true</value>
    <description>set this to true to enable DFSClient short circuit read</description>
  </property>
  <property>
      <name>dfs.block.local-path-access.user</name>
      <value>@USER.RUNNING.THE.TESTS@</value>
  </property>
</configuration>
