<view autoCancelInterval="90" isPersistable="true" isSticky="true" isVisible="true" objectMode="viewconf" onunloadCancelJobs="true" template="dashboard.html">
  <label>Hive Browser</label>
  <module name="AccountBar" layoutPanel="appHeader"/>
  <module name="AppBar" layoutPanel="navigationHeader"/>
  <module name="Message" layoutPanel="messaging">
    <param name="filter">*</param>
    <param name="clearOnJobDispatch">False</param>
    <param name="maxSize">1</param>
  </module>
  <module name="TitleBar" layoutPanel="viewHeader">
    <param name="actionsMenuFilter">dashboard</param>
  </module>
  <module name="StaticContentSample" layoutPanel="panel_row3_col1" group="Table data (first 1000 rows)">
    <param name="text">&lt;p&gt; You can click 'View results' to see the data in the normal splunk results view  &lt;/p&gt;</param>
    <param name="groupLabel">Table data (first 1000 rows)</param>
  </module>
  <module name="EntitySelectLister" layoutPanel="panel_row1_col1" group="Browse connections:">
    <param name="entityFieldsToDisplay">
      <list>
        <param name="value">name</param>
        <param name="label">name</param>
      </list>
    </param>
    <param name="groupLabel">Browse connections:</param>
    <param name="namespace">shep</param>
    <param name="settingToCreate">savedSpecs</param>
    <param name="entityPath">admin/conf-dbspecs</param>
    <module name="HiddenSearch" layoutPanel="panel_row2_col1" group="Select schema">
      <param name="search">| hivequery spec=$spec$ query="show databases"</param>
      <param name="groupLabel">Select schema</param>
      <module name="ConvertToIntention">
        <param name="intention">
          <param name="name">stringreplace</param>
          <param name="arg">
            <param name="spec">
              <param name="fillOnEmpty">True</param>
              <param name="value">$savedSpecs$</param>
            </param>
          </param>
        </param>
        <module name="JobProgressIndicator">
          <module name="Paginator">
            <param name="count">10</param>
            <param name="entityName">results</param>
            <module name="EnablePreview">
              <param name="enable">True</param>
              <param name="display">False</param>
              <module name="SimpleResultsTable">
                <param name="drilldown">row</param>
                <param name="allowTransformedFieldSelect">True</param>
                <param name="drilldownPrefix">db</param>
                <module name="ConvertToIntention">
                  <param name="intention">
                    <param name="name">stringreplace</param>
                    <param name="arg">
                      <param name="database">
                        <param name="prefix">schema=</param>
                        <param name="fillOnEmpty">True</param>
                        <param name="value">$db.value$</param>
                      </param>
                    </param>
                  </param>
                  <module name="HiddenSearch" layoutPanel="panel_row2_col2" group="Select table">
                    <param name="search">| hivequery $spec$ query="show tables" $database$ </param>
                    <param name="groupLabel">Select table</param>
                    <module name="ConvertToIntention">
                      <param name="intention">
                        <param name="name">stringreplace</param>
                        <param name="arg">
                          <param name="spec">
                            <param name="prefix">spec=</param>
                            <param name="fillOnEmpty">True</param>
                            <param name="value">$savedSpecs$</param>
                          </param>
                        </param>
                      </param>
                      <module name="JobProgressIndicator">
                        <module name="Paginator">
                          <param name="count">10</param>
                          <param name="entityName">results</param>
                          <module name="EnablePreview">
                            <param name="enable">True</param>
                            <param name="display">False</param>
                            <module name="SimpleResultsTable">
                              <param name="drilldown">row</param>
                              <param name="allowTransformedFieldSelect">True</param>
                              <param name="drilldownPrefix">tbl</param>
                              <module name="HiddenSearch" layoutPanel="panel_row3_col1" group="Table data (first 1000 rows)">
                                <param name="search">| hivequery $spec$ query="select * from $table$ LIMIT 1000" $database$</param>
                                <param name="groupLabel">Table data (first 1000 rows)</param>
                                <module name="ConvertToIntention">
                                  <param name="intention">
                                    <param name="name">stringreplace</param>
                                    <param name="arg">
                                      <param name="spec">
                                        <param name="fillOnEmpty">True</param>
                                        <param name="prefix">spec=</param>
                                        <param name="value">$savedSpecs$</param>
                                      </param>
                                    </param>
                                  </param>
                                  <module name="ConvertToIntention">
                                    <param name="intention">
                                      <param name="name">stringreplace</param>
                                      <param name="arg">
                                        <param name="table">
                                          <param name="value">$tbl.value$</param>
                                        </param>
                                      </param>
                                    </param>
                                    <module name="ConvertToIntention">
                                      <param name="intention">
                                        <param name="name">stringreplace</param>
                                        <param name="arg">
                                          <param name="database">
                                            <param name="fillOnEmpty">True</param>
                                            <param name="prefix">schema=</param>
                                            <param name="value">$db.value$</param>
                                          </param>
                                        </param>
                                      </param>
                                      <module name="JobProgressIndicator">
                                        <module name="Paginator">
                                          <param name="count">10</param>
                                          <param name="entityName">results</param>
                                          <module name="EnablePreview">
                                            <param name="enable">True</param>
                                            <param name="display">False</param>
                                            <module name="SimpleResultsTable">
                                              <param name="drilldown">row</param>
                                              <param name="allowTransformedFieldSelect">True</param>
                                            </module>
                                            <module name="ViewRedirectorLink">
                                              <param name="viewTarget">flashtimeline</param>
                                            </module>
                                          </module>
                                        </module>
                                      </module>
                                    </module>
                                  </module>
                                </module>
                              </module>
                              <module name="HiddenSearch" layoutPanel="panel_row4_col1" group="Table description">
                                <param name="search">| hivequery $spec$ query="DESC $table$" $database$ | table col_name, data_type, comment</param>
                                <param name="groupLabel">Table description</param>
                                <module name="ConvertToIntention">
                                  <param name="intention">
                                    <param name="name">stringreplace</param>
                                    <param name="arg">
                                      <param name="spec">
                                        <param name="fillOnEmpty">True</param>
                                        <param name="prefix">spec=</param>
                                        <param name="value">$savedSpecs$</param>
                                      </param>
                                    </param>
                                  </param>
                                  <module name="ConvertToIntention">
                                    <param name="intention">
                                      <param name="name">stringreplace</param>
                                      <param name="arg">
                                        <param name="table">
                                          <param name="value">$tbl.value$</param>
                                        </param>
                                      </param>
                                    </param>
                                    <module name="ConvertToIntention">
                                      <param name="intention">
                                        <param name="name">stringreplace</param>
                                        <param name="arg">
                                          <param name="database">
                                            <param name="fillOnEmpty">True</param>
                                            <param name="prefix">schema=</param>
                                            <param name="value">$db.value$</param>
                                          </param>
                                        </param>
                                      </param>
                                      <module name="JobProgressIndicator">
                                        <module name="Paginator">
                                          <param name="count">10</param>
                                          <param name="entityName">results</param>
                                          <module name="EnablePreview">
                                            <param name="enable">True</param>
                                            <param name="display">False</param>
                                            <module name="SimpleResultsTable">
                                              <param name="drilldown">row</param>
                                              <param name="allowTransformedFieldSelect">True</param>
                                            </module>
                                            <module name="ViewRedirectorLink">
                                              <param name="viewTarget">flashtimeline</param>
                                            </module>
                                          </module>
                                        </module>
                                      </module>
                                    </module>
                                  </module>
                                </module>
                              </module>
                              <module name="ViewRedirectorLink">
                                <param name="viewTarget">flashtimeline</param>
                              </module>
                            </module>
                          </module>
                        </module>
                      </module>
                    </module>
                  </module>
                </module>
              </module>
              <module name="ViewRedirectorLink">
                <param name="viewTarget">flashtimeline</param>
              </module>
            </module>
          </module>
        </module>
      </module>
    </module>
  </module>
</view>
