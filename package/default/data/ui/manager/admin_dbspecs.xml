<endpoint name="admin/conf-dbspecs" showAppContext="1">
  <header>Database specs</header>

  <elements>
    <element name="savedbspec" type="fieldset">
      <view name="list"/>
      <view name="edit"/>
      <view name="create"/>

      <elements>

        <element name="name" type="textfield" label="Database spec name">
          <view name="list"/>
          <view name="create"/>
        </element>


        <element name="host" type="textfield" label="Host">
          <view name="list"/>
          <view name="edit"/>
          <view name="create"/>
          <key name="exampleText">Host where the database server is running, such as db.mydomain.com.</key>
        </element>

        <element name="port" type="textfield" label="Port">
          <view name="list"/>
          <view name="edit"/>
          <view name="create"/>
          <key name="exampleText">TCP port that the database server is listening to for connections, such as 3306.</key>
        </element>

        <element name="username" type="textfield" label="User name">
          <view name="edit"/>
          <view name="create"/>
          <key name="exampleText">User name to use when authenticating with the database server, such as dbuser</key>
        </element>

        <element name="password" type="password" label="Password">
          <key name="processValueAdd">''</key>
          <key name="processValueEdit">''</key>
          <view name="edit"/>
          <view name="create"/>
          <key name="exampleText">Password to use when authenticating with the database server, such as mysecret.</key>
        </element>

<!--
        <element name="select_batch_size" type="textfield" label="Lookup batch size">
          <view name="edit"/>
          <view name="create"/>
         <key name="exampleText">Number of records to batch in a single SELECT statement when doing a lookup, such as 100.</key>
        </element>

        <element name="insert_batch_size" type="textfield" label="Insert batch size">
          <view name="edit"/>
          <view name="create"/>
          <key name="exampleText">Number of records to batch in a single INSERT statement when adding/updating records, e.g. 100.</key>
        </element>
-->

      </elements>
      <key name="legend">Database spec details</key>
    </element>
    <element name="eai:acl.owner" label="Owner">
      <view name="list"/>
      <key name="processValueList">entity['eai:acl']['owner'] == 'nobody' and _('No owner') or entity['eai:acl']['owner']</key>
    </element>
    <element name="eai:acl.app" label="App">
      <view name="list"/>
      <key name="processValueList">entity['eai:acl']['app'] or ""</key>
    </element>
  </elements>
</endpoint>
